<div class="body-contents">
<div class="topNav">
        <a class ="navButton" href="/manageUsers">Manage Users</a>
        <a class ="navButton" href="/projectboards">Manage Projects</a>
        <a class ="navButton" href="/taskHistory">Task History</a>
</div>
<div class="userPage">
    <section class="userProfileInfo">
        <div class="profilePicture" style="background-image: url({{user.image}});"> </div>
        <div class="userTitle"> User: {{user.name}}</div>
        <div class="userCreated">Created: {{user.createdAt}}</div>
        <div class="userUpdated">Last Updated: {{user.updatedAt}}</div>
    </section>
    <section class ="userTaskList">
        <h3 class="taskListHeader"> Task List </h3>
        {{!-- {{#each task}} --}}

        {{#each tasks}}
        <div class ="taskList">
            <div>{{this.name}}</div>
        </div> 
        {{/each}}
    </section>
</div>
</div>

